require ${PN}.inc

LICENSE = "GPLv3+ & LGPLv2.1+"
LICENSE_${PN}-bin = "GPLv3+"
LICENSE_${PN} = "LGPLv2.1+"

SRC_URI += "file://libtasn1_fix_for_automake_1.12.patch"

do_patch[postfuncs] += "do_patch_nodocu"
do_patch_nodocu(){
	rm -rf ${S}/doc -rf
	sed 's/ doc//' -i ${S}/Makefile.am
	sed '/doc\//d' -i ${S}/configure.ac
}
